<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Habitaciones"
                    android:textSize="24dp"
                    android:textStyle="bold" />
                <!--            android:text="Habitaciones"-->

                <ImageButton
                    android:id="@+id/exit_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    android:src="@drawable/exit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Nombre"
                    android:textSize="20dp"
                    android:textStyle="normal" />
                <!--             android:text="Nombre"-->
                <EditText
                    android:id="@+id/name_room"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text"
                    android:elevation="10dp"
                    android:hint="Margarita Robles"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColorHint="#000000" />
                <!--            android:hint="Margarita Robles"-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="4dp"
                    android:text="Capacidad"
                    android:textSize="20dp"
                    android:textStyle="normal" />
                <!--            android:text="Capacidad"-->
                <EditText
                    android:id="@+id/capacidad_room"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text"
                    android:elevation="10dp"
                    android:hint="4"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColorHint="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="4dp"
                    android:text="Precio"
                    android:textSize="20dp"
                    android:textStyle="normal" />
                <!--            android:text="Precio"-->
                <EditText
                    android:id="@+id/price_room"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text"
                    android:elevation="10dp"
                    android:hint="15,80"
                    android:inputType="numberDecimal|number"
                    android:padding="8dp"
                    android:textColorHint="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="4dp"
                    android:text="Porcentaje extra"
                    android:textSize="20dp"
                    android:textStyle="normal" />
                <!--             android:text="Porcentaje extra"-->
                <EditText
                    android:id="@+id/extra_room"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text"
                    android:elevation="10dp"
                    android:hint="10"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColorHint="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Descripci贸n"
                    android:textSize="20dp"
                    android:textStyle="normal" />
                <!--            android:text="Descripci贸n"-->
                <EditText
                    android:id="@+id/description_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f8f8f8"
                    android:gravity="top|start"
                    android:hint="Habitaci贸n grande"
                    android:inputType="textLongMessage"
                    android:minHeight="100dp"
                    android:padding="8dp"
                    android:textColorHint="#000000" />
                <!--               android:hint="Habitaci贸n grande"-->
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/edit_menu_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </FrameLayout>
</ScrollView>