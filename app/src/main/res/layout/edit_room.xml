<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="top"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="Habitaciones" />

            <ImageButton
                android:id="@+id/exit_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exit"
                android:background="@null"
                android:padding="10dp"
                android:onClick="onClick" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="20dp"
                android:textStyle="normal"
                android:text="Nombre" />
            <EditText
                android:id="@+id/name_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Margarita Robles"
                android:inputType="text"
                android:background="#f8f8f8"
                android:padding="8dp"
                android:textColorHint="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="20dp"
                android:textStyle="normal"
                android:text="Capacidad" />
            <EditText
                android:id="@+id/capacidad_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="4"
                android:background="#f8f8f8"
                android:padding="8dp"
                android:textColorHint="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginBottom="4dp"
                android:textStyle="normal"
                android:text="Precio" />
            <EditText
                android:id="@+id/price_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="15,80"
                android:background="#f8f8f8"
                android:padding="8dp"
                android:inputType="numberDecimal|number"
                android:textColorHint="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="20dp"
                android:textStyle="normal"
                android:text="Porcentaje extra" />
            <EditText
                android:id="@+id/extra_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="10"
                android:padding="8dp"
                android:inputType="number"
                android:background="#f8f8f8"
                android:textColorHint="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp"
                android:text="Descripción" />
            <EditText
                android:id="@+id/description_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="top|start"
                android:inputType="textLongMessage"
                android:hint="Habitación grande"
                android:padding="8dp"
                android:background="#f8f8f8"
                android:textColorHint="#000000" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/edit_menu_rooms" />
</FrameLayout>